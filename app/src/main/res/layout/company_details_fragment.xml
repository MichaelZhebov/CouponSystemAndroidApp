<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.view.company.CompanyDetailsFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.couponssystem.adminappforcs.ui.main.viewmodel.company.CompanyDetailsViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBarCompanyDetails"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/textLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/idText"
                        style="@style/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/id"
                        tools:text="ID: " />

                    <TextView
                        android:id="@+id/userId"
                        style="@style/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        tools:text="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userNameText"
                        style="@style/textView"
                        android:layout_width="wrap_content"
                        android:text="Name: " />

                    <TextView
                        android:id="@+id/userName"
                        style="@style/textView"
                        android:layout_width="wrap_content"
                        android:text="@={viewmodel.user.fullName}"
                        tools:text=" Some name" />

                    <EditText
                        android:id="@+id/editUserName"
                        style="@style/textView"
                        android:text="@={viewmodel.user.fullName}"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userEmailText"
                        style="@style/textView"
                        android:layout_width="wrap_content"
                        android:text="Email: " />

                    <TextView
                        android:id="@+id/userEmail"
                        style="@style/textView"
                        android:text="@{viewmodel.user.email}"
                        tools:text="Email: Some email" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userIsActive"
                        style="@style/textView"
                        android:layout_width="@dimen/size_100dp"
                        android:text="@string/active"
                        tools:text="Active: " />

                    <Switch
                        android:id="@+id/activeSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:checked="@={viewmodel.user.active}"
                        android:clickable="false"
                        tools:checked="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/couponsCountText"
                        style="@style/textView"
                        android:layout_width="wrap_content"
                        android:text="@string/coupons_count"
                        tools:text="Coupons Count:"/>

                    <TextView
                        android:id="@+id/userCouponsCount"
                        style="@style/textView"
                        android:text=""
                        tools:text="123" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonsUpdDel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="4.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="4.0dip"
                android:paddingBottom="1.0dip"
                android:visibility="visible">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/update"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:backgroundTint="@color/colorAccent"
                    android:text="@string/update" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/delete"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:backgroundTint="@color/red"
                    android:tag=""
                    android:text="@string/delete" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonsCanDel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="4.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="4.0dip"
                android:paddingBottom="1.0dip"
                android:visibility="gone">

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:backgroundTint="@color/red"
                    android:tag=""
                    android:text="@string/cancel" />

                <Button
                    android:id="@+id/updateAllow"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0"
                    android:backgroundTint="@color/colorAccent"
                    android:text="@string/update" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</layout>